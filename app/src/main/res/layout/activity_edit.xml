<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    tools:context=".ui.EditActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/containerImageEdit"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@id/checkHydro"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/fabUndo">

        <ImageView
            android:id="@+id/imageBGCanvas"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:contentDescription="@null" />

        <com.bigthinkapps.pipebuilding.widget.FingerLine
            android:id="@+id/fingerLineEdit"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>


    <org.adw.library.widgets.discreteseekbar.DiscreteSeekBar
        android:id="@+id/seekBarDiameterPipeline"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/global_margin_big"
        android:visibility="gone"
        app:dsb_indicatorColor="@color/colorAccent"
        app:dsb_indicatorFormatter="%d CM"
        app:dsb_max="50"
        app:dsb_min="1"
        app:dsb_progressColor="@color/colorAccent"
        app:dsb_rippleColor="@color/colorAccent"
        app:dsb_value="10"
        app:layout_constraintBottom_toBottomOf="@id/speedDialEdit"
        app:layout_constraintEnd_toStartOf="@+id/speedDialEdit"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/speedDialEdit" />

    <com.leinardi.android.speeddial.SpeedDialOverlayLayout
        android:id="@+id/overlay"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <com.leinardi.android.speeddial.SpeedDialView
        android:id="@+id/speedDialEdit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:sdMainFabClosedSrc="@drawable/ic_add_edit"
        app:sdOverlayLayout="@id/overlay" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fabUndo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/global_margin_x_big"
        android:src="@drawable/ic_undo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fabDownPipe"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/global_margin_x_big"
        android:src="@drawable/downpipe"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/speedDialEdit" />

    <CheckBox
        android:id="@+id/checkHydro"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:checked="true"
        android:text="Hidraulicas"
        android:textColor="@android:color/black"
        app:buttonTint="@color/colorAccent"
        app:layout_constraintBottom_toTopOf="@+id/checkGas"
        app:layout_constraintStart_toStartOf="parent" />

    <CheckBox
        android:id="@+id/checkGas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:checked="true"
        android:text="Gas"
        android:textColor="@android:color/black"
        app:buttonTint="@color/colorAccent"
        app:layout_constraintBottom_toTopOf="@+id/checkSanitary"
        app:layout_constraintStart_toStartOf="parent" />

    <CheckBox
        android:id="@+id/checkSanitary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:checked="true"
        android:text="Sanitarias"
        android:textColor="@android:color/black"
        app:buttonTint="@color/colorAccent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/labelPreviewDiameter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/global_margin_big"
        android:textColor="@color/colorAccent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>